# terminal emulator
super + Return
	$TERMINAL

# notification test
super + i
	notify-send "Notification" "Test content"

# lock
super + l
	sh $HOME/.cache/wal/lock

# launch Windows
super + m
    vboxsdl --startvm Windows

# volume
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume 2 {+,-}5%

# mute audio
XF86AudioMute
	pactl set-sink-mute 2 toggle

# brightness
XF86MonBrightness{Up,Down}
	light -{A,U} 10

# program launcher / powermenu / scrot
super + {d,0,Print}
	$HOME/.config/rofi/scripts/{drun,powermenu,scrot}

# close and kill
super + {_,ctrl + ,shift + }a
	bspc {node -c,desktop -r,node -k}

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + shift + r
	bspc wm -r

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,ctrl + ,shift + }{1-9}
	bspc {desktop -f,desktop -s,node -d} '^{1-9}'

# create desktop
super + {_,shift + }F{1-7}
    bspc {monitor -a,desktop -n} {1-7}

# move desktop
super + ctrl + {Left,Right}
	bspc desktop -m {prev, next} --follow

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# preselect
super + alt + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

# move to preselected
super + p
    bspc node -n 'last.!automatic.local'

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {h,j,k,l}
	bspc node -g {marked,locked,sticky,private}

