modules-right = gmail available-space vpn eth wlan volume date battery slope3 powermenu slope1 slope3

tray-position = none

cursor-click = pointer
cursor-scroll = ns-resize

[module/gmail]
type = custom/script
exec = ~/.config/polybar/gmail/launch.py
interval = 60
format-prefix = " "
format-prefix-foreground = ${xrdb:theme_hl1:#8abeb7}
format-padding = 1

