font-2 = "Font Awesome 5 Free:style=Solid:size=10;3"
font-3 = "Font Awesome 5 Brands:size=8;2"
font-4 = "Material Icons:size=12;3"
font-5 = "DejaVu Sans:size=9;2"
font-6 = "DejaVu Sans:size=22:antialias=false;2"

modules-left = slope2 slope4 arch slope2 updates-arch-combined i3
